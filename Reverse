#include <iostream>
using namespace std;

int main() {
    int n, rev = 0;
    cout << "Enter a number: ";
    cin >> n;

    while (n != 0) {
        int digit = n % 10;        // Get last digit
        rev = rev * 10 + digit;    // Add digit to reversed number
        n = n / 10;                // Remove last digit
    }

    cout << "Reversed number: " << rev << endl;
    return 0;
}
